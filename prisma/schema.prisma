generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  email        String  @unique
  fullName     String
  username     String
  hashpassword String?
  token        String  @default("")
  posts        Post[]
}

model Comment {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  user_id String
  comment String
}

model Post {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  filePath  String
  postTitle String
  likes     Int?
  user      User   @relation(fields: [userId], references: [id])
  userId    String @db.ObjectId
}
